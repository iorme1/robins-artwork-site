<%= form_for @poem do |f| %>
  <div class="form-group">
    <%= f.label :visible, "Work in Progress?" %>
    <%= f.check_box :visible %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Poem title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Poem body" %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
